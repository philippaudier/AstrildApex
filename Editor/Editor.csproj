  </ItemGroup>

  <ItemGroup>
    <!-- Modular PBR Shaders -->
    <None Include="..\Engine\Rendering\Shaders\Forward\ForwardBase.vert">
      <Link>Engine/Rendering/Shaders/Forward/ForwardBase.vert</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\Engine\Rendering\Shaders\Forward\ForwardBase.frag">
      <Link>Engine/Rendering/Shaders/Forward/ForwardBase.frag</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
