    <None Include="..\Engine\Rendering\Shaders\SSAO\SSAOCalc.vert">
      <Link>Engine/Rendering/Shaders/SSAO/SSAOCalc.vert</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
